extends base
include _reviewCard

block append head
    script(src='https://api.mapbox.com/mapbox-gl-js/v1.12.0/mapbox-gl.js')
    link(href='https://api.mapbox.com/mapbox-gl-js/v1.12.0/mapbox-gl.css' rel='stylesheet')


mixin overviewBox(label, text)
    .overview-box__detail
        span.overview-box__label= label
        span.overview-box__text= text

block content
    h1.head-text-detail= inzu.name
    p.summary-text= `${inzu.summary} kugiciro ${inzu.cost}rwf`
    section.section-header
        //- .image-cover
        //-     img.img-cover(src=`/img/amazu/${inzu.imageCover}`, alt=`${inzu.name}`)
        //-     img.img-cover(src=`/img/amazu/${inzu.imageCover}`, alt=`${inzu.name}`)
        .header__hero
            .header__hero-overlay &nbsp;
            img.header__hero-img(src=`/img/amazu/${inzu.imageCover}`, alt=`${inzu.name}`)
    section.section-description
        .overview-box
            div
                .overview-box__group
                    h2.heading-secondary.ma-bt-lg-text Icyerekezo
                    +overviewBox('Igihugu', `${inzu.nationality}`)
                    +overviewBox('Intara', `${inzu.intara}`)
                    +overviewBox('Akarere', `${inzu.akarere}`)
                    +overviewBox('Umurenge', `${inzu.umurenge}`)
                    +overviewBox('Akagari', `${inzu.akagari}`)
                    +overviewBox('Ingano', `${inzu.size}m2`)
                    


                .overview-box__group
                    h2.heading-secondary.ma-bt-lg-text Abagufasha
                    //- each guide in tour.guides
                    .overview-box__detail
                        //- img.overview-box__img(src=`/img/users/${user.photo}`, alt=`${user.name}`)

                        span.overview-box__label +250 729382 -23423
                        span.overview-box__text= inzu.owner

                
        .description-box
            h2.heading-secondary.ma-bt-lg-text= `Ibijyanye na  ${inzu.name}`

            - const paragraphs = inzu.description.split('\n');
            each p in paragraphs
                p.description__text= p

    section.section-pictures
        each img, i in inzu.images
            .picture-box
                img.picture-box__img(src=`/img/amazu/${img}`, alt=`${inzu.name} ${i + 1}`, class =`picture-box__img--${i + 1}`)

    section.section-map
        #map(data-locations=`${JSON.stringify(inzu.locations)}`)

    


                
